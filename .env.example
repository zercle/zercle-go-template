# =============================================================================
# Environment Variables Example
# =============================================================================
# Copy this file to .env and customize the values for your environment.
#
# Usage:
#   cp .env.example .env
#   # Edit .env with your actual values
#
# This file should NEVER contain actual secrets or be committed to version control.
# =============================================================================

# =============================================================================
# Application Configuration
# =============================================================================

# Application name (used in logs and metrics)
APP_APP_NAME=zercle-go-template

# Application version
APP_APP_VERSION=1.0.0

# Environment: development, staging, or production
APP_APP_ENVIRONMENT=development

# =============================================================================
# Server Configuration
# =============================================================================

# Server host address (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
APP_SERVER_HOST=0.0.0.0

# Server port
APP_SERVER_PORT=8080

# Read timeout for HTTP requests (e.g., 30s, 1m)
APP_SERVER_READ_TIMEOUT=30s

# Write timeout for HTTP responses (e.g., 30s, 1m)
APP_SERVER_WRITE_TIMEOUT=30s

# Graceful shutdown timeout (e.g., 10s, 30s)
APP_SERVER_SHUTDOWN_TIMEOUT=10s

# =============================================================================
# Database Configuration (PostgreSQL)
# =============================================================================

# Database host
APP_DATABASE_HOST=localhost

# Database port
APP_DATABASE_PORT=5432

# Database name
APP_DATABASE_DATABASE=zercle_template

# Database username
APP_DATABASE_USERNAME=postgres

# Database password (use a strong password in production!)
APP_DATABASE_PASSWORD=postgres

# SSL mode: disable, require, verify-ca, verify-full
APP_DATABASE_SSL_MODE=disable

# =============================================================================
# JWT Configuration
# =============================================================================

# JWT secret for signing tokens (generate with: openssl rand -base64 32)
APP_JWT_SECRET=your-secret-key-change-in-production

# Access token TTL (e.g., 15m, 24h)
APP_JWT_ACCESS_TOKEN_TTL=15m

# Refresh token TTL (e.g., 168h, 7d)
APP_JWT_REFRESH_TOKEN_TTL=168h

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level: debug, info, warn, error
APP_LOG_LEVEL=info

# Log format: json (production) or console (development)
APP_LOG_FORMAT=json

# =============================================================================
# Optional: Third-Party Integrations
# =============================================================================

# Example: External API Key
# EXTERNAL_API_KEY=your_api_key_here

# Example: Redis URL
# REDIS_URL=redis://localhost:6379/0

# Example: Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn

# =============================================================================
# Development/Testing Overrides
# =============================================================================

# Enable debug mode (additional logging, stack traces in errors)
# DEBUG=true

# Disable request/response logging (useful for load testing)
# DISABLE_ACCESS_LOG=false
